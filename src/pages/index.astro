---
import Layout from "../layouts/Layout.astro";
import HeroIntro from "../components/Home/HeroIntro/HeroIntro.astro";

import { Page_Seo_Query } from "../data/page/queries";
import { Hero_Intro_Query } from "../data/home/queries";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
		query homePageQuery {
			page(id: "/", idType: URI) {
				${Page_Seo_Query}

        homePage {
          ${Hero_Intro_Query}
        }
			}
		}
	`,
  }),
});

const {
  data: {
    page: { seoMetaTags, homePage },
  },
} = await response.json();
---

<Layout
  metaImg={seoMetaTags.seoMetaInformation.metaImage.sourceUrl}
  metaTitle={seoMetaTags.seoMetaInformation.metaTitle}
  metaDescription={seoMetaTags.seoMetaInformation.metaDescription}
>
  <HeroIntro data={homePage.heroIntro} />
</Layout>
